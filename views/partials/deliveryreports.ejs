<section id="vehicleInformation">
    <div class="container-fluid px-0">
        <div class="d-flex justify-content-between align-items-end">
            <div class="">
                <h6 class="placard-title fw-bold text-mute col d-inline">Delivery Reports</h6>
                |
                <h6 id="lastUpdated" class="placard-title text-mute col d-inline"></h6>
            </div>
            <div class="py-2">
                <button onclick="pullReport()" id="pullRequestButton" class="btn btn-sm btn-secondary disabled">Pull
                    Reports</button>
            </div>
        </div>
    </div>
    <div class="placard p-3 rounded shadow">
        <div class="modal fade" id="detailModal" tabindex="-2" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="display-1 fs-1 fw-medium text-capitalize" id="detailsHeader">
                            Username</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="" class="modal-body">
                        <table id="detailModalTable" class="table table-hover">
                            <thead>
                                <tr>
                                    <td>BARCODE</td>
                                    <td>BRAND</td>
                                    <td>NAME</td>
                                    <td>STREET</td>
                                    <td>CITY</td>
                                    <td>STATE</td>
                                    <td>STATUS</td>
                                    <td>LAST EVENT</td>
                                </tr>
                            </thead>
                            <!-- Data -->
                            <tbody class="detailModalTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="reportDetails" class="table table-hover">
                <thead>
                    <tr>
                        <td>IC #</td>
                        <td>NAME</td>
                        <td>LOAD</td>
                        <td>OFD</td>
                        <td>DEL</td>
                        <td>REC</td>
                        <td>MLS</td>
                        <td>ATTEMPTS</td>
                        <td>PROGRESS</td>
                        <td>EVENT</td>
                    </tr>
                </thead>
                <!-- Data -->
                <tbody>
                    <td id="sync-warning" class="d-none" colspan="10"><span class="text-danger opacity-75"
                            style="color: red;">Driver Manifest has not yet been Synchrosnized with the Ontrac Server,
                            Click
                            Pull Request Sync.</span></td>
                </tbody>
                <tfoot id="driverPlaceHolder" class="d-none border-0">
                    <tr class="placeholder-wave ">
                        <td colspan="10" class="opacity-75"><span class="placeholder col-12"> IC #</span></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <script src="<%= body.publicFolder %>js/report.js" type="text/javascript"></script>
</section>